// https://gist.github.com/bitterteasweetorange/78e9a204734abb389adf9acfd9f0997b
// https://github.com/nvim-lualine/lualine.nvim/blob/master/lua/lualine/themes/gruvbox_dark.lua
{
  "workbench.startupEditor": "readme",
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.colorTheme": "gruvboxConcoctis dark hard",
  "workbench.iconTheme": "material-icon-theme",
  "editor.fontFamily": "'CaskaydiaCove Nerd Font', Consolas, 'Courier New', monospace",
  "editor.fontSize": 14,
  "window.zoomLevel": 0.25,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 5,
  "editor.fontLigatures": false,
  "editor.minimap.enabled": false,
  // "editor.stickyScroll.enabled": true,
  // "editor.linkedEditing": true,
  "editor.smoothScrolling": true,
  "editor.suggest.insertMode": "replace",
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.renderWhitespace": "all",
  "editor.lineNumbers": "relative",
  "editor.rulers": [79, 120],
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true
  },
  "projectManager.git.baseFolders": ["f:\\codes"],
  "projectManager.sortList": "Recent",
  "workbench.settings.editor": "json",
  "vim.leader": "<space>",
  "vim.foldfix": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "rgba(230, 97, 89, 0.5)",
  "vim.highlightedyank.textColor": "white",
  "vim.handleKeys": {
    "<C-d>": false,
    "<C-s>": false,
    "<C-z>": false,
    "<C-n>": false,
    "<C-k>": false,
    "<C-a>": false,
    "<C-f>": false,
    "<C-p>": false,
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["leader", "w"], "commands": ["workbench.action.files.save"] },
    { "before": ["leader", "d"], "commands": ["workbench.action.closeActiveEditor"] },
    // { "before": [":"], "commands": ["workbench.action.showCommands"] },
    { "before": ["leader", "k"], "commands": ["editor.action.showHover"] },
    { "before": ["]", "d"], "commands": ["editor.action.marker.next"] },
    { "before": ["[", "d"], "commands": ["editor.action.marker.prev"] },
    { "before": ["leader", "c", "a"], "commands": ["editor.action.quickFix"] },
    { "before": ["leader", "<left>"], "commands": [":tabprev"] },
    { "before": ["leader", "<right>"], "commands": [":tabnext"] },
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": [">"], "commands": ["editor.action.indentLines"] },
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
  ],
  "vim.statusBarColorControl": true,
  // "vim.statusBarColors.normal": ["#1d2021", "#ebdbb2"],
  "vim.statusBarColors.normal": ["#A89984", "#282828"],
  "vim.statusBarColors.insert": ["#83A598", "#282828"],
  "vim.statusBarColors.visual": ["#FE8019", "#282828"],
  "vim.statusBarColors.visualline": ["#FE8019", "#282828"],
  "vim.statusBarColors.visualblock": ["#FE8019", "#282828"],
  "vim.statusBarColors.replace": ["#FB4934", "#282828"],
  "vim.statusBarColors.commandlineinprogress": ["#B8BB26", "#282828"],
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": false,
  "zenMode.hideTabs": true,
  "editor.accessibilitySupport": "off",
  "[python]": {
    "editor.tabSize": 4,
    "editor.rulers": [80, 120],
    "editor.formatOnType": true,
    "editor.wordBasedSuggestions": false
  },
  "workbench.colorCustomizations": {
    "statusBar.background": "#FE8019",
    "statusBar.noFolderBackground": "#FE8019",
    "statusBar.debuggingBackground": "#FE8019",
    "statusBar.foreground": "#282828",
    "statusBar.debuggingForeground": "#282828"
  }
}
